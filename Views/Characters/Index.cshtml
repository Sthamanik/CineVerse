@model IEnumerable<Cineverse.Models.Character>

@{
    ViewData["Title"] = "Cast";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="cine-title display-5">Characters</h1>
        <p class="text-secondary">Bridging stars to stories.</p>
    </div>
    <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm">
        <i class="bi bi-person-video2"></i> Assign New Character
    </a>
</div>

<div class="card cine-card shadow-sm border-0">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0 align-middle">
                <thead class="bg-light text-secondary text-uppercase small tracking-wider">
                    <tr>
                        <th class="ps-4 py-3">Character Name</th>
                        <th>Actor</th>
                        <th>Movie</th>
                        <th>Screen Time</th>
                        <th class="text-end">Pay</th>
                        <th class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model) {
                        <tr>
                            <td class="ps-4 fw-bold text-dark">@Html.DisplayFor(modelItem => item.CharacterName)</td>
                            <td>
                                @if(item.Actor != null)
                                {
                                    <a asp-controller="Actors" asp-action="Details" asp-route-id="@item.ActorId" class="text-primary text-decoration-none fw-medium">@item.Actor.Name</a>
                                }
                            </td>
                            <td>
                                @if(item.Movie != null)
                                {
                                    <a asp-controller="Movies" asp-action="Details" asp-route-id="@item.MovieId" class="text-primary text-decoration-none fw-medium">@item.Movie.Title</a>
                                }
                            </td>
                            <td class="text-secondary">@Html.DisplayFor(modelItem => item.Screentime)</td>
                            <td class="text-end text-success fw-semibold">@Html.DisplayFor(modelItem => item.Pay)</td>
                            <td class="text-end pe-4">
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary" title="Edit"><i class="bi bi-pencil"></i></a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary" title="Details"><i class="bi bi-info-circle"></i></a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger" title="Delete"><i class="bi bi-trash"></i></a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
