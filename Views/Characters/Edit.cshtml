@model Cineverse.Models.Character

@{
    ViewData["Title"] = "Edit Character";
}

<div class="row justify-content-center">
    <div class="col-md-9">
        <div class="card cine-card shadow-sm border-0">
            <div class="card-header bg-transparent border-bottom py-3">
                <h2 class="mb-0 text-dark"><i class="bi bi-pencil-square"></i> Edit Character</h2>
            </div>
            <div class="card-body p-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="mb-4">
                        <label asp-for="CharacterName" class="form-label text-secondary small text-uppercase fw-bold"></label>
                        <input asp-for="CharacterName" class="form-control form-control-lg" />
                        <span asp-validation-for="CharacterName" class="text-danger"></span>
                    </div>

                    <div class="row g-3 mb-3">
                        <div class="col-md-6">
                            <label asp-for="MovieId" class="form-label text-secondary small text-uppercase fw-bold">Movie</label>
                            <select asp-for="MovieId" class="form-select" asp-items="ViewBag.MovieId"></select>
                            <span asp-validation-for="MovieId" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="ActorId" class="form-label text-secondary small text-uppercase fw-bold">Actor</label>
                            <select asp-for="ActorId" class="form-select" asp-items="ViewBag.ActorId"></select>
                            <span asp-validation-for="ActorId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <label asp-for="Pay" class="form-label text-secondary small text-uppercase fw-bold"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-light text-secondary">$</span>
                                <input asp-for="Pay" class="form-control" />
                            </div>
                            <span asp-validation-for="Pay" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Screentime" class="form-label text-secondary small text-uppercase fw-bold"></label>
                            <input asp-for="Screentime" class="form-control" />
                            <span asp-validation-for="Screentime" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between align-items-center">
                        <a asp-action="Index" class="text-secondary text-decoration-none"><i class="bi bi-arrow-left"></i> Back to List</a>
                        <button type="submit" class="btn btn-primary btn-lg px-5">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
