@model Cineverse.Models.Actor

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-4">
    <div class="row">
        <!-- Photo Placeholder -->
        <div class="col-md-4 mb-4">
            <div class="ratio ratio-1x1 bg-light rounded-circle shadow-sm d-flex align-items-center justify-content-center text-secondary border mx-auto" style="max-width: 300px;">
                <div class="text-center">
                    <i class="bi bi-person display-1 text-muted opacity-50"></i>
                </div>
            </div>
        </div>

        <!-- Details -->
        <div class="col-md-8 d-flex flex-column justify-content-center">
            <h1 class="display-4 fw-bold cine-title mb-2">@Model.Name</h1>
            <div class="mb-4">
                @if(Model.DateOfBirth.HasValue)
                {
                    <span class="badge bg-danger fs-6 me-2"><i class="bi bi-calendar-event"></i> @Model.DateOfBirth.Value.ToShortDateString()</span>
                }
                <span class="badge bg-light text-dark border fs-6 me-2">@Model.Gender</span>
                @if(!string.IsNullOrEmpty(Model.BirthCity))
                {
                    <span class="text-secondary"><i class="bi bi-geo-alt"></i> @Model.BirthCity, @Model.BirthCountry</span>
                }
            </div>

            <h5 class="text-dark fw-bold text-uppercase mb-2">Biography</h5>
            <p class="lead text-secondary mb-5">@Model.Biography</p>

            <div class="row mb-5 g-4">
                <div class="col-6 col-md-3">
                    <small class="text-secondary text-uppercase d-block mb-1 fw-bold">Height</small>
                    <h4 class="text-dark">@Model.Height"</h4>
                </div>
                <div class="col-6 col-md-3">
                    <small class="text-secondary text-uppercase d-block mb-1 fw-bold">Net Worth</small>
                    <h4 class="text-success">@Model.NetWorth.ToString("C0")</h4>
                </div>
            </div>

            <div class="d-flex gap-2">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary px-4">Edit Profile</a>
                <a asp-action="Index" class="btn btn-outline-secondary px-4">Back to List</a>
            </div>
        </div>
    </div>
</div>
