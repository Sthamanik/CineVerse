@model Cineverse.Models.Movie

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-4">
    <div class="row">
        <!-- Poster Placeholder -->
        <div class="col-md-4 mb-4">
            <div class="ratio ratio-2x3 bg-light rounded shadow-sm d-flex align-items-center justify-content-center text-secondary border">
                <div class="text-center">
                    <i class="bi bi-film display-1 text-muted opacity-50"></i>
                    <p class="mt-2 small text-uppercase fw-bold">No Poster</p>
                </div>
            </div>
        </div>

        <!-- Details -->
        <div class="col-md-8">
            <h1 class="display-4 fw-bold cine-title mb-2">@Model.Title</h1>
            <div class="mb-4">
                <span class="badge bg-dark text-white fs-6 me-2">@Model.Rating</span>
                <span class="badge bg-light text-dark border fs-6 me-2">@Model.ReleaseDate.Year</span>
                <span class="text-secondary fw-medium">@Model.Genre &bull; @Model.Runtime min</span>
            </div>

            <h5 class="text-dark fw-bold text-uppercase mb-2">Synopsis</h5>
            <p class="lead text-secondary mb-5">@Model.Summary</p>

            <div class="row mb-5 g-4">
                <div class="col-6 col-md-3">
                    <small class="text-secondary text-uppercase d-block mb-1 fw-bold">Budget</small>
                    <h5 class="text-dark">@Model.Budget.ToString("C0")</h5>
                </div>
                <div class="col-6 col-md-3">
                    <small class="text-secondary text-uppercase d-block mb-1 fw-bold">Box Office</small>
                    <h5 class="text-success">@Model.Gross.ToString("C0")</h5>
                </div>
                <div class="col-6 col-md-3">
                    <small class="text-secondary text-uppercase d-block mb-1 fw-bold">Release Date</small>
                    <h5 class="text-dark">@Model.ReleaseDate.ToShortDateString()</h5>
                </div>
            </div>

            <div class="d-flex gap-2">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary px-4">Edit Movie</a>
                <a asp-action="Index" class="btn btn-outline-secondary px-4">Back to List</a>
            </div>
        </div>
    </div>
</div>
