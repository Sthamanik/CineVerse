@model Cineverse.Models.Movie

@{
    ViewData["Title"] = "Create Movie";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card cine-card shadow-sm border-0">
            <div class="card-header bg-transparent border-bottom py-3">
                <h2 class="mb-0 text-dark"><i class="bi bi-film"></i> Add New Movie</h2>
            </div>
            <div class="card-body p-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <div class="mb-3">
                        <label asp-for="Title" class="form-label text-secondary small text-uppercase fw-bold"></label>
                        <input asp-for="Title" class="form-control form-control-lg" placeholder="Enter movie title" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="row g-3 mb-3">
                        <div class="col-md-6">
                            <label asp-for="Rating" class="form-label text-secondary small text-uppercase fw-bold"></label>
                             <select asp-for="Rating" class="form-select">
                                <option value="">Select Rating</option>
                                <option value="G">G</option>
                                <option value="PG">PG</option>
                                <option value="PG-13">PG-13</option>
                                <option value="R">R</option>
                                <option value="NC-17">NC-17</option>
                            </select>
                            <span asp-validation-for="Rating" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Genre" class="form-label text-secondary small text-uppercase fw-bold"></label>
                            <input asp-for="Genre" class="form-control" placeholder="Action, Drama, Sci-Fi..." />
                            <span asp-validation-for="Genre" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row g-3 mb-3">
                        <div class="col-md-6">
                            <label asp-for="ReleaseDate" class="form-label text-secondary small text-uppercase fw-bold"></label>
                            <input asp-for="ReleaseDate" class="form-control" />
                            <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Runtime" class="form-label text-secondary small text-uppercase fw-bold"></label>
                            <div class="input-group">
                                <input asp-for="Runtime" class="form-control" />
                                <span class="input-group-text bg-light text-secondary">min</span>
                            </div>
                            <span asp-validation-for="Runtime" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row g-3 mb-3">
                        <div class="col-md-6">
                            <label asp-for="Budget" class="form-label text-secondary small text-uppercase fw-bold"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-light text-secondary">$</span>
                                <input asp-for="Budget" class="form-control" />
                            </div>
                            <span asp-validation-for="Budget" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Gross" class="form-label text-secondary small text-uppercase fw-bold"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-light text-secondary">$</span>
                                <input asp-for="Gross" class="form-control" />
                            </div>
                            <span asp-validation-for="Gross" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Summary" class="form-label text-secondary small text-uppercase fw-bold"></label>
                        <textarea asp-for="Summary" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Summary" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between align-items-center">
                        <a asp-action="Index" class="text-secondary text-decoration-none"><i class="bi bi-arrow-left"></i> Back to List</a>
                        <button type="submit" class="btn btn-primary btn-lg px-5">Publish Movie</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
