@model Cineverse.Models.Movie

@{
    ViewData["Title"] = "Delete Movie";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card cine-card border-danger shadow-sm">
            <div class="card-header bg-danger bg-opacity-10 text-danger border-bottom border-danger">
                <h3 class="mb-0"><i class="bi bi-exclamation-triangle-fill"></i> Delete Confirmation</h3>
            </div>
            <div class="card-body p-5 text-center">
                <h4 class="mb-3 text-dark">Are you sure you want to delete this movie?</h4>
                <h1 class="display-6 fw-bold text-dark mb-4">@Model.Title</h1>
                
                <p class="text-secondary mb-4">
                    Released in @Model.ReleaseDate.Year &bull; @Model.Genre
                </p>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-grid gap-2 d-md-block">
                        <a asp-action="Index" class="btn btn-outline-secondary px-4">Cancel</a>
                        <button type="submit" class="btn btn-danger px-4">Delete Permanently</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
