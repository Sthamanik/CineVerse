@model IEnumerable<Cineverse.Models.Movie>

@{
    ViewData["Title"] = "Movies Library";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="cine-title display-5">Movies</h1>
        <p class="text-secondary">Manage your cinematic collection.</p>
    </div>
    <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm">
        <i class="bi bi-plus-lg"></i> Add New Movie
    </a>
</div>

<div class="card cine-card shadow-sm border-0">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0 align-middle">
                <thead class="bg-light text-secondary text-uppercase small tracking-wider">
                    <tr>
                        <th class="ps-4 py-3">Title</th>
                        <th>Rating</th>
                        <th>Release Date</th>
                        <th>Genre</th>
                        <th class="text-end">Budget</th>
                        <th class="text-end">Gross</th>
                        <th class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model) {
                        <tr>
                            <td class="ps-4 fw-bold text-dark">@Html.DisplayFor(modelItem => item.Title)</td>
                            <td><span class="badge bg-light text-dark border">@Html.DisplayFor(modelItem => item.Rating)</span></td>
                            <td class="text-secondary">@Html.DisplayFor(modelItem => item.ReleaseDate)</td>
                            <td>@Html.DisplayFor(modelItem => item.Genre)</td>
                            <td class="text-end text-secondary">@Html.DisplayFor(modelItem => item.Budget)</td>
                            <td class="text-end fw-semibold text-dark">@Html.DisplayFor(modelItem => item.Gross)</td>
                            <td class="text-end pe-4">
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary" title="Edit"><i class="bi bi-pencil"></i></a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary" title="Details"><i class="bi bi-info-circle"></i></a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger" title="Delete"><i class="bi bi-trash"></i></a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
